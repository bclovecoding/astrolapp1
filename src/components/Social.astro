---
interface Props {
  platform: string
  username: string
}
const { platform, username } = Astro.props
---

<style>
  a {
    padding: 0.5rem 1rem;
    color: #e5e7eb;
    background-color: #4c1d95;
    text-decoration: none;
    font-weight: 700;
  }
</style>

<a href={`https://www.${platform}.com/${username}`}>{platform}</a>
